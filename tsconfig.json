{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020", // for Dynamic imports

    "rootDir": "./src",
    "outDir": "out",

    "typeRoots": ["./@types", "./node_modules/@types"],

    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  }
}

{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "rootDir": "src",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "out",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
